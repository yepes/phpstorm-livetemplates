    <variable name="CATEGORY" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
    </context>
  </template>
  <template name="action" value="public function action$ACTION$() {&#10;    &#10;}" description="controller action" toReformat="false" toShortenFQNames="true">
